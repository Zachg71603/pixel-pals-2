<modal id="createPostModal" class="hidden fixed z-10 inset-0 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen">
        <!-- Form for creating a new post -->
        <form class="bg-white rounded-lg w-1/2" onsubmit="submitPost(event)">
        <!-- Modal header -->
        <div class="flex justify-between items-center border-b p-3 text-lg">
            <h3 class="text-gray-900">Create a Post</h3>
            <!-- Button to close the modal -->
            <button id="closeCreate" type="button" onclick="toggleModal('createPostModal')">
            <span class="text-gray-900">&times;</span>
            </button>
        </div>
        <!-- Modal body -->
        <!-- TODO: Add a file input for uploading media -->
        <div class="p-3">
            <!-- Textarea for entering post content -->
            <textarea id="postText" name="postText" rows="4" class="w-full border p-2" placeholder="Text" required></textarea>
        </div>
        <!-- Modal footer -->
        <div class="flex justify-end items-center p-3 border-t">
            <!-- Button to cancel and close the modal -->
            <button type="button" id="cancelPost" onclick="toggleModal('createPostModal')" class="bg-gray-200 hover:bg-gray-300 rounded text-gray-900 py-2 px-4 mr-2">Cancel</button>
            <!-- Submit button to create the post -->
            <input type="submit" value="Create" class="cursor-pointer bg-pink hover:bg-neon-pink rounded text-white py-2 px-4">
        </div>
        </form>
    </div>
</modal>
