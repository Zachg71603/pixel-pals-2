function loadPosts(userId) {
    fetch(`/user/${userId}/posts`)
        .then(response => response.json())
        .then(posts => {
            // Assuming you have a way to compile Handlebars templates in the frontend
            const postsHtml = Handlebars.compile(document.getElementById('posts-template').innerHTML)({ posts });
            document.querySelector('.posts-container').innerHTML = postsHtml;
        })
        .catch(error => console.error('Error fetching posts:', error));
}

// Call loadPosts with the appropriate user ID when the page loads
document.addEventListener('DOMContentLoaded', () => {
    const userId = '...'; // Retrieve the user ID from the page context or URL
    loadPosts(userId);
});